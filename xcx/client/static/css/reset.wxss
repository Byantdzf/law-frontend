/* reset -- start */

page {
  position: relative;
  height: 100%;
  color: #333;
}

view,
scroll-view {
  position: relative;
  font-family: "Arial", "Microsoft YaHei", "黑体", "宋体", sans-serif;
  font-size: 28rpx;
  box-sizing: border-box;
}

image {
  display: block;
  width: 100%;
  height: 100%;
}

button {
  font-size: 36rpx;
}

button[size=mini] {
  font-size: 28rpx;
}

button[type=primary] {
  background-color: #CF443D;
  border: 1px solid #fff;
}

button[loading][type=primary] {
  background-color: #CF443D;
}

button[type=warm] {
  color: #fff;
  background-color: #ffba00;
}

button[loading][type=warm] {
  background-color: #fac639;
}

button[type=pink] {
  color: #fff;
  background-color: #ffc0cb;
}

button[loading][type=pink] {
  background-color: #ffc0cb;
}

button[loading]::before {
  position: relative;
  top:-2rpx;
}

button[type=primary].button-hover {
  color: #fff;
  background-color: #CF443D;
}

button[type=warm].button-hover {
  color: #fff;
  background-color: #e5a700;
}

button[plain][type=primary],
button[plain][type=primary].button-hover {
  color: #CF443D;
  border: 1px solid #CF443D;
  background-color: transparent;
}

button[plain][type=default],
button[plain][type=default].button-hover {
  color: #333;
  border: 1px solid #f3f3f3;
  background-color: transparent;
}

button[plain][type=warm],
button[plain][type=warm].button-hover {
  color: #e5a700;
  border: 1px solid #e5a700;
  background-color: transparent;
}

button[plain][type=pink],
button[plain][type=pink].button-hover {
  color: #ffc0cb;
  border: 1px solid #ffc0cb;
  background-color: transparent;
}

.icon-check {
  position: relative;
  top: -2rpx;
  display: inline-block;
  margin-right: 20rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.icon-check::after {
  content: "\e696";
  font-size: 46rpx;
  color: #9e9e9e;
}

checkbox {
  display: none;
}

checkbox[checked] + .icon-check::after {
  content: "\e695";
  color: #F64335;
}

/* reset -- end */
.font22 {
  font-size: 22rpx !important;
}
.font24 {
  font-size: 24rpx !important;
}
.font26 {
  font-size: 26rpx !important;
}

.font28 {
  font-size: 28rpx !important;
}

.font30 {
  font-size: 30rpx !important;
}

.bcF{
  background: white;
}
.bcTheme{
  background: linear-gradient(to right, #CF443D , #fe664f)!important;
}
.bcTheme_sub{
  background-image: linear-gradient(to right, #fdbc3e , #fed065)!important;
}
.bold{
  font-weight: bold;
}
.ellipsis_1 {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.color_white{color: white}
.color_theme{
  color: #CF443D !important;
}
.color_theme_sub{
  color: #fdbc3e;
}
.color_333{
  color: #333333;
}
.color_666{
  color: #666666;
}
.color_999{
  color: #999999;
}
.btn {
  border: none;
  text-align: left;
  padding: 0;
  margin: 0;
  line-height: inherit;
  background: none;
  border-radius: inherit;
}
.flo_l {float: left}
.flo_r {float: right}
.clearfloat {clear:both}
.text-center{text-align: center}

.ellipsis_3 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
