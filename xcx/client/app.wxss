.ellipse {
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.app-input {
  width: 100%;
  padding: 10rpx;
  height: 70rpx;
  line-height: 70rpx;
  border: 1px solid #e0e0e0;
  border-radius: 6rpx;
  box-sizing: border-box;
}
.app-cells {
  position: relative;
}
.app-cells::before,
.app-cells::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  width: 100%;
}
.app-cells::before {
  top: 0;
  border-top: 1px solid #f3f3f3;
}
.app-cells::after {
  bottom: 0;
  border-bottom: 1px solid #f3f3f3;
}
.app-cell {
  position: relative;
  display: flex;
  padding: 30rpx 0;
  align-items: center;
}
.app-cell + .app-cell::before{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  border-top: 1px solid #f3f3f3;
}
.app-cell__bd {
  flex: 1;
}

.app-scroller {
  position: relative;
}
.app-scroller scroll-view {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
}

.ta-c {
  text-align: center;
}
