.page-order-detail {
  /* background: #f3f3f3; */
  padding: 0 30rpx 30rpx;
  line-height: 44rpx;
}

.page-order-detail .title {
  padding: 20rpx 0;
  font-size: 32rpx;
}

.img-lawyer {
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  background: #f3f3f3;
}

.detail-box {
  position: relative;
  padding: 30rpx 0;
}

.detail-box + .detail-box::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  border-top: 2rpx solid #f3f3f3;
}

.btn-box button {
  min-width: 300rpx;
}
.btn-box button[plain] {
  border-color: #e0e0e0;
  color: #666;
}
.btn-box button[plain]::after {
  border-color: #e0e0e0;
}
.btns.btn-box button {
  min-width: 200rpx;
}

.textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  border: 2rpx solid #f3f3f3;
  border-radius: 4rpx;
  box-sizing: border-box;
}

.icon-wenjian {
  font-size: 100rpx;
  line-height: 1;
}

.reply-wrapper .radio-box {
  padding-left: 40rpx;
}

.icon-stop,
.icon-yuyin {
  font-size: 60rpx;
  padding-right: 10rpx;
}

.file-item {
  justify-content: center;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  width: 140rpx;
}
.upload-btn {
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  border-radius: 4rpx;
  border: 2rpx dashed #e0e0e0;
}

.pop-auth {
  padding: 30rpx;
}

.recording-box {
  position: relative;
  width: 200rpx;
  height: 80rpx;
}
.recording-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  border: 0;
  color: transparent;
  z-index: 100;
}

.pop-auth { padding: 60rpx 40rpx;}
.pop-auth .pop-auth__hd .img-box { float:left; width:60rpx; height:60rpx; background:#fff; border-radius: 50%; overflow: hidden;}
.pop-auth .pop-auth__hd .img-box image { display:block; width:60rpx; height:60rpx;}
.pop-auth .pop-auth__hd .txt { font-size:40rpx; margin-left:30rpx;}
.pop-auth .pop-auth__bd { margin-top:40rpx; font-size:28rpx;}
.pop-auth .pop-auth__bd .subtxt { margin-bottom: 60rpx; margin-top:10rpx; font-size:24rpx; color:#999;}
.pop-auth .pop-auth__ft .flex-bd:first-child { margin-right:10rpx;}
.pop-auth .pop-auth__ft .flex-bd:last-child { margin-left:10rpx;}



.playBox{
  width: 32vw;
  height: 52rpx;
  background: red;
  margin-left: 0vw;
  border-radius: 50rpx;
  position: relative;
  text-align: left;
  /*margin-top: 12rpx;*/
  line-height: 52rpx;
  background: -webkit-linear-gradient(left,#fe4557,#fea0b8);
}
.playBox:before {
  content: "";
  border-bottom: solid 10px #fe4557;
  border-left: solid 8px #00800000;
  border-right: solid 8px #00800000;
  border-top: solid 0px #00800000;
  position: absolute;
  left: 8%;
  top: -22%;
}
.mainBoxPlay {
  width: 40rpx;
  height: 40rpx;
  box-sizing: border-box;
  position: relative;
  margin-top: 8rpx;
  transform: scale(.9);
}
.mainBoxPlay image{
  width: 36rpx;
  height: 36rpx;
  margin-left: 42rpx;
}
.wifi-symbol {
  width: 50rpx;
  height: 50rpx;
  /*box-sizing: border-box;*/
  overflow: hidden;
  transform: rotate(135deg);
}
.wifi-circle {
  border: 5rpx solid #ffffff;
  border-radius: 50%;
  position: absolute;
}

.first {
  width: 5rpx;
  height: 5rpx;
  background: white;
  top: 45rpx;
  left: 45rpx;
}

.second {
  width: 25rpx;
  height: 25rpx;
  top: 35rpx;
  left: 35rpx;
}
.third {
  width: 40rpx;
  height: 40rpx;
  top: 25rpx;
  left: 25rpx;
}

@keyframes fadeInOut {
  0% {
    opacity: 0; /*初始状态 透明度为0*/
  }
  100% {
    opacity: 1; /*结尾状态 透明度为1*/
  }
}

.playActiveSecond {
  animation: fadeInOut 1s infinite 0.2s;
}
.playActiveThird {
  animation: fadeInOut 1s infinite 0.4s;
}
.detail-box {
  position: relative;
  padding: 0rpx;
  border: 1rpx solid #efefef;
  margin: 22rpx auto;
}
.main-info{
  padding: 0 22rpx;
}
.main-dot{
  border-bottom: 12rpx solid #f5f6f9;
  margin: 22rpx 0;
}
