.mainBoxPlay {
  width: 40rpx;
  height: 40rpx;
  box-sizing: border-box;
  position: relative;
  margin-top: 8rpx;
  transform: scale(.9);
}
.mainBoxPlay image{
  width: 36rpx;
  height: 36rpx;
  margin-left: 42rpx;
}
.wifi-symbol {
  width: 50rpx;
  height: 50rpx;
  /*box-sizing: border-box;*/
  overflow: hidden;
  transform: rotate(135deg);
}
.wifi-circle {
  border: 5rpx solid #ffffff;
  border-radius: 50%;
  position: absolute;
}

.first {
  width: 5rpx;
  height: 5rpx;
  background: white;
  top: 45rpx;
  left: 45rpx;
}

.second {
  width: 25rpx;
  height: 25rpx;
  top: 35rpx;
  left: 35rpx;
}
.third {
  width: 40rpx;
  height: 40rpx;
  top: 25rpx;
  left: 25rpx;
}

@keyframes fadeInOut {
  0% {
    opacity: 0; /*初始状态 透明度为0*/
  }
  100% {
    opacity: 1; /*结尾状态 透明度为1*/
  }
}

.playActiveSecond {
  animation: fadeInOut 1s infinite 0.2s;
}
.playActiveThird {
  animation: fadeInOut 1s infinite 0.4s;
}
