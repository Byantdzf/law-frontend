<!-- pages/tabBar/search/index.wxml -->
<app-page id="app-page">
  <view class="container page-evaluate">
    <view class="page-form">
      <view class="flex">
        <view class="cl-999 mr-20">申诉类型</view>
        <radio-group class="radio-group" bindchange="radioChange">
          <radio class="radio" wx:for-items="{{items}}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
            <text>{{item.value}}</text>
          </radio>
        </radio-group>
      </view>
      <view class="mt-20">
        <textarea class="textarea" placeholder="请输入您申诉的想法，后台工作人员会在第一时间进行处理" bindinput="handleContentChange"></textarea>
      </view>
      <view class="mt-20">
        <text class="cl-999">您也可以拨打客服热线进行申诉：</text>
        <text>0755-1234567</text>
      </view>
    </view>
    <view class="btn-box">
      <button type="primary" bindtap="submit">提交申诉</button>
    </view>
  </view>
</app-page>