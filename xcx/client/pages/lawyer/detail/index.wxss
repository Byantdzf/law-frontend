
.img-box { width:200rpx; height:200rpx; margin: 0 auto; border-radius: 20rpx; overflow: hidden;}
.lawyerName { text-align: center; }
.lawyerName .score { font-size:40rpx; margin-top:20rpx;}
.lawyerName .name { font-size: 40rpx;}
.lawyerName text { font-size: 28rpx; color:#999; margin-left:40rpx;}
.helper { padding: 40rpx 50rpx;}
.btn-box button[size=mini] { padding-left:.5em; padding-right:.5em;}
.tab-box { text-align: center; margin-top:30rpx; background: #f5f5f5; line-height: 3em;}
.tab-box .curr { background: #f55; color:#fff;}
.tab-content { margin: 30rpx 0;}
.tab-content .items { line-height: 2em;}
.tab-content .items .flex-ft { width:170rpx;}
.tab-content .items.rangeList { align-items: initial;}
.tab-content .items.rangeList button { float:left; margin: 0 20rpx 20rpx 0; font-size:24rpx; padding: 0 .5rem;}

.baseInfo { margin: 0 30rpx;}

.orderList .tit { margin: 30rpx 0 20rpx; font-weight: bold;}
.table { border-right: 1px solid #e6e6e6; border-bottom: 1px solid #e6e6e6;}
.tr { display: flex; width: 100%; justify-content: center; align-items: center;}
.th { width:40%; justify-content: center; background: #eee; color: #666; display: flex; height: 3em; align-items: center; font-size: 24rpx; border-left:1px solid #e6e6e6; border-top:1px solid #e6e6e6;}
.td { width:40%; justify-content: center; text-align: center; font-size: 24rpx; border-left:1px solid #e6e6e6; border-top:1px solid #e6e6e6; height:3em; line-height: 3em;}

.scoreList .items { border:1px solid #e6e6e6; border-radius: 30rpx; padding:20rpx; align-items: initial; margin-top: 30rpx;}
.scoreList .items .img-box { width:200rpx; height:200rpx; margin-right:50rpx; margin-top:10rpx; border-radius: 20rpx; overflow: hidden;}
.scoreList .items .flex-bd .name { font-size: 36rpx;}
.scoreList .items .flex-bd .flex { line-height: 1.5em;}
.scoreList .items .flex-bd .flex .flex-ft { width: 140rpx; font-size: 24rpx;}
.scoreList .items .desc {margin-top:20rpx; font-size: 24rpx; color:#999; line-height: 1.5em;}