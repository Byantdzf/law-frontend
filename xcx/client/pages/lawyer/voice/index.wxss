@import "/static/css/issue.wxss";

.img-box { width:200rpx; height:200rpx; margin: 0 auto; border-radius: 20rpx; overflow: hidden;}
.lawyerName { text-align: center; }
.lawyerName .name { font-size: 40rpx;}
.lawyerName .name text { font-size: 28rpx; color:#999; margin-left:40rpx;}
.helper { padding: 40rpx 50rpx;}

.scoreBox { text-align: center; height: 40rpx;}
.scoreBox>view { display: inline-block; vertical-align: top;}
.starBox { width:200rpx; height:40rpx; margin-right:20rpx; background: url(data:image/png;base64,); background-size:40rpx;}
.starBox text { display: block; height:100%; background: url(data:image/png;base64,); background-size:40rpx;}

.scoreBox .score { color: #f00; font-size: 36rpx;}s
.scoreList .items { border:1px solid #e6e6e6; border-radius: 30rpx; padding:20rpx; align-items: initial; margin-top: 30rpx;}
.scoreList .items .img-box { width:200rpx; height:200rpx; margin-right:50rpx; margin-top:10rpx; border-radius: 20rpx; overflow: hidden;}
.scoreList .items .flex-bd .name { font-size: 36rpx; text-align: left;}
.scoreList .items .flex-bd .flex { line-height: 1.5em;}
.scoreList .items .flex-bd .flex .flex-ft { width: 140rpx; font-size: 24rpx;}
.scoreList .items .desc {margin-top:20rpx; font-size: 24rpx; color:#999; line-height: 1.5em; text-align: left;}