
.img-box { width:200rpx; height:200rpx; margin: 0 auto; border-radius: 20rpx; overflow: hidden;}
.lawyerName { text-align: center; }
.lawyerName .score { font-size:40rpx; margin-top:20rpx;}
.lawyerName .name { font-size: 40rpx;}
.lawyerName text { font-size: 28rpx; color:#999; margin-left:40rpx;}
.helper { padding: 40rpx 50rpx;}
.btn-box button[size=mini] { padding-left:.5em; padding-right:.5em;}
.tab-box { text-align: center; margin-top:30rpx; background: #f5f5f5; line-height: 3em;}
.tab-box .curr { background: #f55; color:#fff;}
.tab-content { margin: 30rpx 0;}
.tab-content .items { line-height: 2em;}
.tab-content .items .flex-ft { width:170rpx;}
.tab-content .items.rangeList { align-items: initial;}
.tab-content .items.rangeList button { float:left; margin: 0 20rpx 20rpx 0; font-size:24rpx; padding: 0 .5rem;}

.issueBox { margin: 0 30rpx;}
.issue-title { font-size: 30rpx; font-weight: bold; margin-bottom: 20rpx;}
.issue-form-label { width:160rpx; color:#999;}
.issue-form-item { border-bottom: 1rpx solid #e8e8e8; padding: 40rpx 0;}
.issue-form-item textarea { min-height: 200rpx; width: 100%;}
.issueBox .radio { margin-right: 50rpx;}
.issueBox .form-btn-box button { width:100%;}
