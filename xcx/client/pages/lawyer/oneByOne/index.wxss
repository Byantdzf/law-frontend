    z-index: 9999;
    position: fixed;
    bottom: 0;
    left: 0;
    background: white;
    box-shadow: 0rpx -2rpx 12rpx #dfdfdf;
}
.item_btn{
    display: inline-block;
    padding: 10rpx 32rpx;
    /*border: 1rpx solid #d3d3d3;*/
    border-radius: 42rpx;
    box-shadow: 1rpx 1rpx 12rpx #d0d0d0;
}
.water{
    width: 140%;
    height: 140%;
    position: relative;
    position: absolute;
    top: -9%;
    left: -20%;
}
.activeStyle{
    position: absolute;
    border-radius: 50%;
    animation: border 3s linear infinite;
}
.water .point{
    position: absolute;
    border-radius: 50%;
    animation: border 3s linear 1;
}
.water .point2{
    -webkit-animation-delay: 0.5s;
}
.water .point3{
    -webkit-animation-delay: 1s;
}
.water .point4{
    -webkit-animation-delay: 1.5s;
}
@keyframes border{
    from {
        width: 0;
        height: 0;
        top: 50%;
        left: 50%;
        background-color: rgb(227, 235, 228, 0.4);
    }
    to {
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background-color: rgba(235,51,36,0);
    }
}
.issue-title{
    margin-top:34rpx;
    position: relative;
    margin-left: 12rpx;
}

.issue-title:before{
    content: '';
    width: 6rpx;
    height: 26rpx;
    background: #CF443D;
    position: absolute;
    left: -12rpx;
    top: 8rpx;
}
.issue-form-item{
    padding: 4rpx;
}
.app-input{
    padding: 0;
}
.form-btn-box{
    padding: 32rpx;
}
.radio-group{
    transform: scale(.8);
    font-size: 34rpx;
    vertical-align: middle;
}

.scoreBox {
    text-align: center;
    float: right;
    border-radius: 42rpx;
    border: 2rpx solid #fff;
    margin-top: -8vw;
    margin-right: 12rpx;
    padding: 6rpx 22rpx;
    background: rgba(255,255,255,0.3);
}
