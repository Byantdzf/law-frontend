/* pages/legalServices/list/index.wxss */
page { background: #f3f3f3;}

.tab-bar { background: #fff;}

.list-item,
.intro { background: #fff; padding: 26rpx; border-bottom: 12rpx solid #f1f2f5;}
.intro .img-box { width:100%; height:300rpx;}

.list-item .img-box image,
.intro .img-box image { border-radius: 0rpx;}
.intro .title { font-size: 40rpx; line-height: 2.4;}
.intro .desc { color:#666;}

.list-box { position: relative;}

.items { width:100%;}

.list-item { align-items: flex-start;}
.list-item .img-box { width: 240rpx; height:240rpx;}
.list-item .img-box image { margin-right:30rpx;}
.list-item .title { font-size: 36rpx; line-height: 2;}
.list-item .desc {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}
.list-item .price-box { padding: 20rpx 0;}
.list-item .btn-box { text-align: right;}
.list-item .btn-box button:last-child { margin-left: 20rpx;}

.bottomCart { background: #fff; border-top:1px solid #dedede; padding: 30rpx;}
.bottomCart .icon-susong { background: blue; color: #fff; font-size: 40rpx; border-radius: 50%; padding: 20rpx; margin-right:30rpx;}
.bottomCart .fonts { width:350rpx; overflow: hidden;}
.bottomCart .total { font-size: 30rpx; color: #f00;}


