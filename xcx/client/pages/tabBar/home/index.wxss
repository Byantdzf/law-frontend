.page-home {
  background: #f3f3f3;
}
.page-search {
  padding: 20rpx 30rpx;
  background: #fff;
}
.page-search .location {
  min-width: 160rpx;
}
.page-search .city {
  max-width: 160rpx;
}
.page-search .search-box {
  padding: 8rpx 0;
  border: 1px solid #e0e0e0;
  border-radius: 20rpx;
}

.service-types {
  padding: 10rpx 0;
  background: #fff;
}
.service-item {
  position: relative;
  width: 25%;
  padding: 10rpx 0;
  align-items: center;
  justify-content: center;
}
.service-item .icon-box{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
}
.service-item .icon-box .iconfont{
  font-size: 46rpx;
  color: #fff;
}
.page-title {
  margin-top: 20rpx;
}
.page-title .title{
  font-size: 32rpx;
  font-weight: bold;
}
.page-title .icon-arrow-right {
  font-size: 24rpx;
}
.home-list {
  padding-bottom: 100rpx;
}
.list-item {
  padding: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  align-items: flex-start;
}
.list-item + .list-item {
  margin-top: 20rpx;
}
.list-item .img-box {
  width: 120rpx;
  height: 120rpx;
}
.list-item .img-box image {
  border-radius: 50%;
}
.list-item .name {
  font-size: 32rpx;
}
.list-item .desc {
  margin: 10rpx 0;
}
.list-item .btn-box {
  margin-top: 16rpx;
  justify-content: space-between;
}
.list-item .btn-box button {
  margin: 0;
  padding: 0 20rpx;
  border-color: #e0e0e0;
  color: #666;
}
.list-item .btn-box button::after {
  border-color: #e0e0e0;
}
.hot-news-wrapper {
  height: 250rpx;
  margin-top: 20rpx;
  background: #fff;
}
.hot-news {
  flex-wrap: nowrap;
}
.hot-news-item {
  width: 224rpx;
}

.hot-news-item image {
  width: 224rpx;
  height: 130rpx;
  border-radius: 6rpx;
}
.hot-news-item + .hot-news-item {
  margin-left: 22rpx;
}
.hot-news-item .brief {
  height:1.5em;
  line-height: 1.5em;
}

.float-tools {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  transition: 0.3s;
}
.float-tools.show {
  right: 50%;
  bottom: 110rpx;
  margin-right: -50rpx;
}
.float-tools .mask::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,0.5);
  z-index: 900;
}

.float-tools-btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-shadow: 0 6rpx 10rpx rgba(0,0,0,0.2);
  z-index: 1000;
}
.float-tools-btn .iconfont {
  font-size: 50rpx;
  color: #fff;
}

.float-tools-item {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-shadow: 0 6rpx 10rpx rgba(0,0,0,0.2);
  z-index: 990;
  text-align: center;
  opacity: 0;
  transition: 0.5s;
}
.float-tools.show .float-tools-item {
  opacity: 1;
}
.float-tools.show .float-tools-item1 {
  top: 100rpx;
  left: -100rpx;
}
.float-tools.show .float-tools-item2 {
  top: 0rpx;
  left: -130rpx;
}
.float-tools.show .float-tools-item3 {
  top: -100rpx;
  left: -100rpx;
}
.float-tools.show .float-tools-item4 {
  top: -130rpx;
  left: 0rpx;
}
.float-tools.show .float-tools-item5 {
  top: -100rpx;
  left: 100rpx;
}
.float-tools.show .float-tools-item6 {
  top: 0rpx;
  left: 130rpx;
}
.float-tools.show .float-tools-item7 {
  top: 100rpx;
  left: 100rpx;
}