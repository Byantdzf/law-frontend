.page-home {
  background: #ffffff;
}
.page-search {
  padding: 20rpx 30rpx;
  background: #CF443D;
  box-shadow: 1rpx 1rpx 12rpx #f0f0f0;
  z-index: 999;
}
.page-search .location {
  min-width: 132rpx;
}
.page-search .city {
  max-width: 160rpx;
}
.page-search .search-box {
  padding: 8rpx 0;
  border: 1px solid #e0e0e0;
  border-radius: 32rpx;
  background: white;
}

.service-types {
  padding: 10rpx 0;
  background: #fff;
}
.service-item {
  position: relative;
  width: 25%;
  padding: 10rpx 0;
  align-items: center;
  justify-content: center;
}
.service-item .icon-box{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
}
.service-item .icon-box .iconfont{
  font-size: 46rpx;
  color: #fff;
}
.page-title {
  padding: 22rpx;
  border-bottom: 2rpx solid #f5f6f9;
  border-top: 10rpx solid #f5f6f9;
}
.page-title .title{
  font-size: 30rpx;
  position: relative;
  padding-left: 16rpx;
  color: #CF443D;
}
.page-title .title:before{
  content: '';
  width: 6rpx;
  height: 26rpx;
  background: #CF443D;
  position: absolute;
  left: 0 ;
  top: 8rpx;
}
.page-title .icon-arrow-right {
  font-size: 26rpx;
  margin-left: 4rpx;
}

.list-item {
  padding: 24rpx 22rpx;
  /*background: #fff;*/
  /*border-radius: 20rpx;*/
  align-items: flex-start;
  border-bottom: 1rpx solid #f0f0f0;
}
.list-item + .list-item {
  /*margin-top: 20rpx;*/
}
.list-item .img-box {
  width: 100rpx;
  height: 100rpx;
}
.list-item .img-box image {
  border-radius: 50%;
}
.hot-news-item .img-box image {
  box-shadow: 1rpx 1rpx 12rpx #d3d3d3;
}
.list-item .name {
  font-size: 32rpx;
}
.list-item .desc {
  max-width: 70vw;
  margin-top: 2rpx;
  line-height: 40rpx;
  max-height: 120rpx;
  overflow: hidden;
}
.helpNum{
  margin-right: 16rpx;
}
.list-item .desc_sub{
  margin-top: -4rpx;
}
.list-item .btn-box {
  margin-top: 16rpx;
  justify-content: space-between;
}
.list-item .btn-box button {
  margin: 0;
  padding: 0 10rpx;
  border-color: #e0e0e0;
  font-size: 24rpx;
  color: #666;
}
.list-item .btn-box button::after {
  border-color: #e0e0e0;
}
.home-list {
  padding-bottom: 0;
}
.hot-news-wrapper {
  height: 250rpx;
  margin-top: 20rpx;
  background: #fff;
}
.hot-news {
  flex-wrap: nowrap;
}
.hot-news-item {
  width: 224rpx;
}

.hot-news-item image {
  width: 224rpx;
  height: 130rpx;
  border-radius: 6rpx;
}
.hot-news-item + .hot-news-item {
  margin-left: 22rpx;
}
.hot-news-item .brief {
  height:1.5em;
  line-height: 1.5em;
}

.bottom-empty-box {
  width: 100%;
  height: 120rpx;
}

.float-tools-btn {
  position: fixed;
  bottom: 12vw;
  right: 8vw;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  box-shadow: 1rpx 1rpx 14rpx #cacaca;
  z-index: 1000;
}

.icon-plus {
  font-size: 70rpx;
  color: #ffffff;
}

.app-pop__main {
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 40rpx 0rpx;
}

.float-tools-item {
  width: 25%;
  padding: 20rpx 0;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.float-tools-item .icon-box {
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
  border-radius: 50%;
  box-shadow: 0 0 20rpx #d9d9d9;
}
.icon-box image {
  width: 60rpx;
  height: 60rpx;
}
.txt-box {
  font-size: 24rpx;
}
.pop-btn {
  margin-top: 30rpx;
}
.pop-btn .iconfont {
  color: #000;
}
.app-empty-wrapper {
  margin-top: 20rpx;
  padding: 30rpx 0;
  background: #fff;
}
.app-empty .iconfont {
  font-size: 100rpx;
}
.iconStyle{
  width: 42rpx;
  height: auto;
}
.item-btn{
  padding: 4rpx 20rpx;
  border-radius: 32rpx;
  box-shadow: 1rpx 1rpx 12rpx #eeeeee;
}
