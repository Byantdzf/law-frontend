.page-lawyer {
  background: #f3f3f3;
}
.page-search {
  padding: 20rpx 30rpx;
  background: #fff;
}
.page-search .location {
  min-width: 160rpx;
}
.page-search .search-box {
  padding: 8rpx 0;
  border: 1px solid #e0e0e0;
  border-radius: 20rpx;
}
.page-lawyer .app-tab {
  background: #fff;
}
.app-sort {
  padding: 20rpx 0;
  background: #ccc;
}

.list-item {
  padding: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  align-items: flex-start;
}
.list-item + .list-item {
  margin-top: 20rpx;
}
.list-item .img-box {
  width: 120rpx;
  height: 120rpx;
}
.list-item .img-box image {
  border-radius: 50%;
}
.list-item .name {
  font-size: 32rpx;
}
.list-item .desc {
  margin: 10rpx 0;
}
.list-item .btn-box {
  margin-top: 16rpx;
  justify-content: space-between;
}
.list-item .btn-box button {
  margin: 0;
  padding: 0 20rpx;
  border-color: #e0e0e0;
  color: #666;
}
.list-item .btn-box button::after {
  border-color: #e0e0e0;
}