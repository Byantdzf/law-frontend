/* pages/mandatoryLawyer/list/index.wxss */

.mp-top-box { padding:30rpx;}
.mp-top-box input { background: #ECECEC; box-sizing: border-box; border-radius: 64rpx; height:80rpx; line-height: 80rpx; text-align: center; padding:0 20rpx 0 60rpx; text-align: left;}
.mp-top-box .icon-search { position: absolute; left:50rpx; top:30rpx; font-size: 30rpx; line-height: 80rpx;}

.search-items { padding:0 20rpx;}

.list-item {
padding: 20rpx;
background: #fff;
border-radius: 20rpx;
align-items: flex-start;
}
.list-item + .list-item {
margin-top: 20rpx;
}
.news-items .img-box,
.list-item .img-box {
width: 120rpx;
height: 120rpx;
margin-right:30rpx;
}
.news-items .img-box image,
.list-item .img-box image {
border-radius: 50%;
}
.list-item .name {
font-size: 32rpx;
}
.list-item .desc {
margin: 10rpx 0;
}
.list-item .btn-box {
margin-top: 16rpx;
justify-content: space-between;
}
.list-item .btn-box button {
margin: 0;
padding: 0 10rpx;
border-color: #e0e0e0;
font-size: 26rpx;
color: #666;
}
.list-item .btn-box button::after {
border-color: #e0e0e0;
}

.news-items .desc {
margin-top: 12rpx;
max-height: 110rpx;
  overflow: hidden;
}
.news-items .title {
font-size: 32rpx;
font-weight: bold;
}
.news-items .app-cell::before,
.news-items .app-cells::after {
left: 20rpx;
}

.twolines {
display: -webkit-box;
overflow: hidden;
text-overflow: ellipsis;
word-wrap: break-word;
white-space: normal !important;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}