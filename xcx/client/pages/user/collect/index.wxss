/* pages/user/collect/index.wxss */

  .list-item {
    padding: 30rpx;
    background: #fff;
    border-radius: 20rpx;
    align-items: flex-start;
    border-bottom: 1rpx solid #f3f3f3;
  }
  .list-item + .list-item {
    margin-top: 20rpx;
  }
  .list-item .img-box {
    width: 120rpx;
    height: 120rpx;
  }
  .list-item .img-box image {
    border-radius: 50%;
  }
  .list-item .name {
    font-size: 32rpx;
  }
  .list-item .desc {
    margin: 10rpx 0;
  }
  .list-item .btn-box {
    margin-top: 16rpx;
    justify-content: space-between;
  }
  .list-item .btn-box button {
    margin: 0;
    padding: 0 20rpx;
    border-color: #e0e0e0;
    color: #666;
  }
  .list-item .btn-box button::after {
    border-color: #e0e0e0;
  }