<!-- pages/login/wechat/index.wxml -->
<app-page id="app-page">
    <view class="flex-column container page-login">
        <view class="login-title">使用微信帐号快捷登录小米有品</view>
        <view class="login-logo">
            <image src="/static/images/logo.png"></image>
        </view>
        <view class="flex-bd">
            <view class="btn-box">
                <button type="primary" open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">同意协议并授权登录</button>
            </view>
            <view class="agreement">
                阅读并同意以下协议<text class="cl-primary" catchtap="showAgreement">《用户协议》</text>、<text class="cl-primary" catchtap="showPrivacy">《隐私协议》</text>
            </view>
        </view>
    </view>
</app-page>